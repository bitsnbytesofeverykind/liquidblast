<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/activity_settings_parent"
    tools:context="com.boxfight.boxfight.Settings">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_settings_username"
        android:backgroundTint="@color/colorBlueGrey_200"
        android:hint="Username"
        android:layout_centerInParent="true"
        android:layout_above="@+id/activity_settings_submit"
        android:maxLength="10"
        android:singleLine="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_settings_error"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:textColor="#FF0000"
        android:text="*Username is already taken"
        android:padding="2dp"
        android:textSize="16sp"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/allbutton"
        android:id="@+id/activity_settings_submit"
        android:text="Submit"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        />
</RelativeLayout>
