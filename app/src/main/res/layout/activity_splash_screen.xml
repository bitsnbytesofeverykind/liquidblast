<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_splash_screen_parent"
    android:background="@color/colorWhite"
    tools:context="com.boxfight.boxfight.SplashScreen">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/boxfight"
        android:id="@+id/activity_splash_image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:text="Box Fight"
        android:layout_below="@+id/activity_splash_image"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
